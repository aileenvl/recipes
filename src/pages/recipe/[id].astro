---
import Layout from '../../layouts/Layout.astro';
import { OramaClient } from '@oramacloud/client'

const { id } = Astro.params;
const name = Astro.url.searchParams.get('name');
console.log('Requested ID:', id, 'Name:', name);

let recipe;

try {
  const client = new OramaClient({
    endpoint: import.meta.env.PUBLIC_ORAMA_ENDPOINT,
    api_key: import.meta.env.PUBLIC_ORAMA_API_KEY
  });

  const results = await client.search({
    term: name || '',
    mode: 'fulltext',
  })

  recipe = results.hits[0]?.document;

  if (!recipe) {
    return new Response('Recipe not found', { status: 404 });
  }
} catch (error) {
  console.error('Error:', error);
  return new Response('Error fetching recipe', { status: 500 });
}
