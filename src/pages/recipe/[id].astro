---
import Layout from '../../layouts/Layout.astro';
import { OramaClient } from '@oramacloud/client'

// For hybrid mode, we need to explicitly mark this route as non-prerendered
export const prerender = false;

const { id } = Astro.params;
const name = Astro.url.searchParams.get('name');

if (!id || !name) {
  return Astro.redirect('/', 302);
}

let recipe;
try {
  const endpoint = import.meta.env.PUBLIC_ORAMA_ENDPOINT?.trim();
  const apiKey = import.meta.env.PUBLIC_ORAMA_API_KEY?.trim();
  
  if (!endpoint || !apiKey) {
    throw new Error('Missing Orama configuration');
  }
  
  const client = new OramaClient({
    endpoint,
    api_key: apiKey
  });

  // Search with both ID and name to be more precise
  const searchResults = await client.search({
    term: name,
    mode: 'fulltext',
    limit: 10
  });

  recipe = searchResults.hits.find(hit => hit.document.id === id)?.document;
  
  if (!recipe) {
    // Try one more time with just the ID
    const idResults = await client.search({
      term: id,
      limit: 1,
      where: {
        id: id
      }
    });
    
    recipe = idResults.hits[0]?.document;
    
    if (!recipe) {
      return Astro.redirect('/', 302);
    }
  }

} catch (error) {
  console.error('Error fetching recipe:', error);
  return Astro.redirect('/', 302);
}
---

