---
import Layout from '../../layouts/Layout.astro';
import { OramaClient } from '@oramacloud/client'

export const prerender = false;

const { id } = Astro.params;
const name = Astro.url.searchParams.get('name');

// Ensure both id and name are required
if (!id || !name) {
  return new Response('Missing required parameters', {
    status: 400,
  });
}

let recipe;
try {
  const endpoint = import.meta.env.PUBLIC_ORAMA_ENDPOINT?.trim();
  const apiKey = import.meta.env.PUBLIC_ORAMA_API_KEY?.trim();
  
  if (!endpoint || !apiKey) {
    throw new Error('Missing Orama configuration');
  }
  
  const client = new OramaClient({
    endpoint,
    api_key: apiKey
  });

  // Try to find the recipe by ID first
  const idResults = await client.search({
    term: id,
    mode: 'fulltext',
    limit: 1,
    exact: true,
    where: {
      id: id
    }
  });

  if (idResults.hits.length > 0) {
    recipe = idResults.hits[0].document;
  } else {
    // Fallback to searching by name if ID search fails
    const nameResults = await client.search({
      term: name,
      mode: 'fulltext',
      limit: 10
    });

    recipe = nameResults.hits.find(hit => hit.document.id === id)?.document;
  }
  
  if (!recipe) {
    return new Response('Recipe not found', {
      status: 404,
    });
  }
} catch (error) {
  return new Response('Error fetching recipe', {
    status: 500,
  });
}
